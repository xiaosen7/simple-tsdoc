{
  "name": "simple-tsdoc",
  "version": "1.0.4",
  "description": "Generate markdown documentations by using *.d.ts files",
  "bin": {
    "simple-tsdoc": "./bin/index.mjs"
  },
  "scripts": {
    "dev": "rimraf ./dist && tsup --watch",
    "build": "rimraf ./dist && tsup",
    "test": "vitest --globals",
    "example:dts": "tsc ./example/src/index.ts --emitDeclarationOnly -d --outDir ./example/dist"
  },
  "keywords": [
    "tsdoc",
    "markdown",
    "generator",
    "documentation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@microsoft/api-extractor": "^7.33.7",
    "@microsoft/api-extractor-model": "^7.25.3",
    "@microsoft/tsdoc": "^0.14.2",
    "cac": "^6.7.14",
    "i18n": "^0.15.1"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.6",
    "@types/node": "^18.11.18",
    "rimraf": "^3.0.2",
    "tsup": "^6.5.0",
    "tsx": "^3.12.1",
    "typescript": "4.8.4",
    "vitest": "^0.26.2"
  },
  "sideEffects": false,
  "files": [
    "bin",
    "dist"
  ],
  "homepage": "https://github.com/xiaosen7/simple-tsdoc",
  "repository": {
    "type": "github",
    "url": "https://github.com/xiaosen7/simple-tsdoc"
  }
}
